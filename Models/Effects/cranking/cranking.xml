<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <name>CrankingNOALS</name>
    <path>Classic/cranking.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>CrankingNOALS</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not>
    </condition>
  </animation>

  <model>
    <name>CrankingALS</name>
    <path>ALS/cranking.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>CrankingALS</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

  <model>
    <name>CrankingHDR</name>
    <path>HDR/cranking.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>CrankingHDR</object-name>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
  </animation>

</PropertyList>
