<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <name>WakeNOALS</name>
    <path>Classic/wake.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>WakeNOALS</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not>
    </condition>
  </animation>

  <model>
    <name>WakeALS</name>
    <path>ALS/wake.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>WakeALS</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

  <model>
    <name>WakeHDR</name>
    <path>HDR/wake.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>WakeHDR</object-name>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
  </animation>

</PropertyList>
