<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>pedestal-new.ac</path>

  <animation>
    <object-name>pedestal</object-name>
  </animation>

  <effect>
	<inherits-from>Effects/model-interior</inherits-from>
	<parameters>
		<dirt-factor>0.2</dirt-factor>
		<contrast>0.75</contrast>
	</parameters>
	<object-name>pedestal</object-name>
  </effect>


  <model>
    <path>../Instruments/westach_quad/westach_quad.xml</path>
    <offsets>
      <x-m>-0.527</x-m>
      <y-m> 0</y-m>
      <z-m> 0.315 </z-m>
      <pitch-deg>-20</pitch-deg>
    </offsets>
  </model>

  <animation>
    <type>material</type>
    <object-name>led.batt</object-name>
	<object-name>led.alt</object-name>
	<object-name>led.instr</object-name>
    <emission>
      <red>   2 </red>
      <green> 2 </green>
      <blue>  2 </blue>
    </emission>
  </animation>
  
  <animation>
	<type>pick</type>
	<object-name>btn.batt</object-name>
	<object-name>led.batt</object-name>
	<action>
		<button>0</button>
		<repeatable>false</repeatable>
		<binding>
			<command>property-toggle</command>
			<property>controls/electric/battery-switch</property>
		</binding>
	</action>
	<hovered>
		<binding>
			<command>set-tooltip</command>
			<tooltip-id>Battery-switch</tooltip-id>
			<label>Battery switch: %s</label>
			<mapping>on-off</mapping>
			<property>controls/electric/battery-switch</property>
		</binding>
	</hovered>
  </animation>
	<animation>
		<type>select</type>
		<object-name>led.batt</object-name>
		<condition>
			<and>
				<property>systems/electrical/volts</property>
				<property>controls/electric/battery-switch</property>
			</and>
		</condition>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>btn.alt</object-name>
		<object-name>led.alt</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>controls/electric/engine/generator</property>
			</binding>
			<binding>
				<command>property-toggle</command>
				<property>controls/electric/alt-switch</property>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
      			<tooltip-id>Alt-switch</tooltip-id>
      			<label>Alternator switch: %s</label>
      			<mapping>on-off</mapping>
				<property>controls/electric/engine/generator</property>
			</binding>
		</hovered>
	</animation>
	<animation>
		<type>select</type>
		<object-name>led.alt</object-name>
		<condition>
			<and>
				<property>systems/electrical/volts</property>
				<property>controls/electric/engine/generator</property>
			</and>
		</condition>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>btn.alt</object-name>
		<object-name>led.alt</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>controls/engines/engine[0]/fuel-pump</property>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
      			<tooltip-id>Fuel-pump</tooltip-id>
      			<label>Fuel Pump: %s</label>
      			<mapping>on-off</mapping>
				<property>controls/engines/engine[0]/fuel-pump</property>
			</binding>
		</hovered>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>led.pump</object-name>
		<condition>
			<property>systems/electrical/output/fuel-pump</property>
		</condition>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>btn.instr</object-name>
		<object-name>led.instr</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>controls/electric/avionics-switch</property>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
      			<tooltip-id>Avionics-switch</tooltip-id>
      			<label>Avionics switch: %s</label>
      			<mapping>on-off</mapping>
				<property>controls/electric/avionics-switch</property>
			</binding>
		</hovered>
	</animation>
	<animation>
		<type>select</type>
		<object-name>led.instr</object-name>
		<condition>
			<property>systems/electrical/outputs/avionics-bus</property>
		</condition>
	</animation>
	

