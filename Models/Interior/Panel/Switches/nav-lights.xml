<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>button-led.ac</path>

  <animation>
    <object-name>btn</object-name>
    <object-name>led</object-name>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>btn</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
            <command>property-toggle</command>
            <property>controls/lighting/nav-lights</property>
        </binding>
    </action>
    <hovered>
        <binding>
            <command>set-tooltip</command>
              <tooltip-id>nav-lights</tooltip-id>
              <label>Nav lights: %s</label>
              <mapping>on-off</mapping>
              <property>controls/lighting/nav-lights</property>
        </binding>
    </hovered>
</animation>

<animation>
    <type>material</type>
    <object-name>led</object-name>
    <emission>
      <red>   2 </red>
      <green> 2 </green>
      <blue>  2 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>led</object-name>
    <condition>
      <property>systems/electrical/outputs/nav-lights</property>
    </condition>
  </animation>
  </PropertyList>