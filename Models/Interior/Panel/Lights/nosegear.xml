<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>multilight.ac</path>

  <animation>
    <object-name>Base</object-name>
    <object-name>lens</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>Base</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>lens</object-name>
    <emission>
      <red>   0.1 </red>
      <green> 0.1 </green>
      <blue>  0.1 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>light.amber</object-name>
    <object-name>light.red</object-name>
    <object-name>light.green</object-name>
    <object-name>light.blue</object-name>
    <emission>
      <red>   2 </red>
      <green> 2 </green>
      <blue>  2 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>light.green</object-name>
    <condition>
      <equals>
        <property>gear/gear/position-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>light.blue</object-name>
    <condition>
      <equals>
        <property>gear/gear/position-norm</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>light.amber</object-name>
    <condition>
        <and>
        <greater-than>
            <property>gear/gear[0]/position-norm</property>
            <value>0</value>
        </greater-than>
        <less-than>
            <property>gear/gear[0]/position-norm</property>
            <value>1</value>
        </less-than>
        <property>systems/electrical/outputs/annunciators</property>
        </and>
    </condition>
</animation>

</PropertyList>
