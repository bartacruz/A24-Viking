<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    <path>annunciators.ac</path>
    
    <!-- <animation>
        <object-name>charge</object-name>
        <object-name>gears</object-name>
        <object-name>flaps</object-name>
        <object-name>doors</object-name>
        <object-name>fuel</object-name>
      </animation>
     -->
      <animation>
        <type>noshadow</type>
        <object-name>charge</object-name>
        <object-name>gears</object-name>
        <object-name>flaps</object-name>
        <object-name>doors</object-name>
        <object-name>fuel</object-name>
      </animation>
      <animation>
        <type>material</type>
        <object-name>flaps.off</object-name>
        <object-name>charge.off</object-name>
        <object-name>doors.off</object-name>
        <object-name>fuel.off</object-name>
        <object-name>gears.off</object-name>
        <emission>
          <red>   0.1 </red>
          <green> 0.1 </green>
          <blue>  0.1 </blue>
        </emission>
      </animation>

      <animation>
        <type>material</type>
        <object-name>charge.led</object-name>
        <object-name>doors.led</object-name>
        <object-name>fuel.led</object-name>
        <emission>
          <red>   1.5 </red>
          <green> 1.5 </green>
          <blue>  1.5 </blue>
        </emission>
        <condition>
                <greater-than>
                    <property>systems/electrical/outputs/annunciators</property>
                    <value>6</value>
                </greater-than>
        </condition>
      </animation>

      <animation>
        <type>select</type>
        <object-name>doors.led</object-name>
        <emission>
          <red>   1 </red>
          <green> 1 </green>
          <blue>  1 </blue>
        </emission>
        <condition>
            <and>
                <greater-than>
                    <property>systems/electrical/outputs/annunciators</property>
                    <value>6</value>
                  </greater-than>
                  <greater-than>
                    <property>systems/electrical/sources/battery</property>
                    <value>0</value>
                  </greater-than>      
            </and>
        </condition>
      </animation>

      <animation>
        <type>material</type>
        <object-name>flaps.green</object-name>
        <object-name>flaps.amber</object-name>
        <object-name>flaps.red</object-name>
        <condition>
          <greater-than>
            <property>systems/electrical/outputs/annunciators</property>
            <value>6</value>
          </greater-than>
        </condition>
        <emission>
          <red>   1 </red>
          <green> 1 </green>
          <blue>  1 </blue>
        </emission>
      </animation>

      <animation>
        <type>material</type>
        <object-name>flaps.green</object-name>
        <object-name>flaps.amber</object-name>
        <object-name>flaps.red</object-name>
        <condition>
          <greater-than>
            <property>systems/electrical/outputs/annunciators</property>
            <value>6</value>
          </greater-than>
        </condition>
        <emission>
          <red>   1 </red>
          <green> 1 </green>
          <blue>  1 </blue>
        </emission>
      </animation>
    
      <animation>
        <type>material</type>
        <object-name>flaps.off</object-name>
        <emission>
          <red>   0.1 </red>
          <green> 0.1 </green>
          <blue>  0.1 </blue>
        </emission>
      </animation>
    
      <animation>
        <type>select</type>
        <object-name>flaps.amber</object-name>
        <condition>
          <equals>
            <property>surface-positions/flap-pos-norm</property>
            <value>1</value>
          </equals>
        </condition>
      </animation>
      
      <animation>
        <type>select</type>
        <object-name>flaps.green</object-name>
        <condition>
          <equals>
            <property>surface-positions/flap-pos-norm</property>
            <value>0.5</value>
          </equals>
        </condition>
      </animation>
    
      <animation>
        <type>select</type>
        <object-name>flaps.red</object-name>
        <condition>
          <not>
            <or>
              <equals>
                <property>surface-positions/flap-pos-norm</property>
                <value>0</value>
              </equals>    
              <equals>
                <property>surface-positions/flap-pos-norm</property>
                <value>0.5</value>
              </equals>
              <equals>
                <property>surface-positions/flap-pos-norm</property>
                <value>1</value>
              </equals>
            </or>
          </not>
        </condition>
      </animation>
    
      <animation>
        <type>select</type>
        <object-name>flaps.off</object-name>
        <condition>
          <equals>
            <property>surface-positions/flap-pos-norm</property>
            <value>0</value>
          </equals>
        </condition>
      </animation>
    
</PropertyList>
