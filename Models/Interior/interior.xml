<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intporteG</object-name>
    <object-name>intporteD</object-name>
    <object-name>planchet</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
    <!-- HDR mode -->
    <object-name>HDRintvitres</object-name>
    <object-name>HDRintvitreG</object-name>
    <object-name>HDRintvitreD</object-name>
  </animation>

  <!-- working for Compositor -->
  <effect>
    <inherits-from>../Effects/Glass/glassrain</inherits-from>
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
  </effect>

  <effect>
    <inherits-from>../Effects/Glass/glass</inherits-from>
    <object-name>HDRintvitres</object-name>
    <object-name>HDRintvitreG</object-name>
    <object-name>HDRintvitreD</object-name>
  </effect>

  <!-- SÃ©lection des vitres en fonction de HDR ou pas -->
  <animation>
    <type>select</type>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
    <object-name>HDRintvitres</object-name>
    <object-name>HDRintvitreG</object-name>
    <object-name>HDRintvitreD</object-name>
  </animation>

  <animation>
    <type>select</type>
    <condition>
      <not><property>/sim/rendering/hdr/hdr-enabled</property></not>
    </condition>
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <model>
    <path>Panel/panel.xml</path>
    <offsets>
      <x-m> -2.192 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.321 </z-m>
    </offsets>
  </model>

  <model>
    <path>Panel/Pedestal/all-pedestals.xml</path>
  </model>

  <model>
    <path>../Pilot/all-pilots.xml</path>
  </model>

  <model>
    <path>Seats/all-seats.xml</path>
  </model>

  <!-- Canopy -->
  <animation>
    <type>pick</type>
    <object-name>intporteG</object-name>
    <object-name>intvitreG</object-name>
    <object-name>HDRintvitreG</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>intporteG</object-name>
    <object-name>intvitreG</object-name>
    <object-name>HDRintvitreG</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> 0.0 </dep></entry>
      <entry><ind> 1 </ind><dep> 0.7 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>intporteD</object-name>
    <object-name>intvitreD</object-name>
    <object-name>HDRintvitreD</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.passenger.toggle();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>intporteD</object-name>
    <object-name>intvitreD</object-name>
    <object-name>HDRintvitreD</object-name>
    <property>sim/model/door-positions/passenger/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> 0.0 </dep></entry>
      <entry><ind> 1 </ind><dep> 0.7 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
